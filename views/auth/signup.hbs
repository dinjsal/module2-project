<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User LogIn Page</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400"
      rel="stylesheet"
    />
    <link href="../stylesheets/signup.style.css" rel="stylesheet"/>
   
  </head>
  <body>
      <section class="showcase">
        <div class="img-container">
            <img src="/images/planet-1989837_1280.jpg" />
        </div>
        <div class="content">
          <h3>EXPERIENCE WHAT MOST CAN ONLY DREAM</h3>
            {{#if errorMessage}}
              <div class="error">{{errorMessage}}</div>
              <br />
            {{/if}}
            <form action="/auth/signup" method="POST">
                <label for="email">FIRST NAME</label>
              <input class="form-selection form-selection1" autofocus type="text" name="first-name" required />
              <br>
              <label for="password">LAST NAME</label>
              <input class="form-selection" type="text" name="last-name" required />
              <br>
              <label for="email">DATE OF BIRTH</label>
              <input class="form-selection" type="date" name="date-birth" required />
              <br>
              <label for="email">EMAIL</label>
              <input class="form-selection" type="email" name="email" required />
              <br>
              <label for="password">PASSWORD</label>
              <input class="form-selection" type="password" name="password" required />
              <br>
              <br>
              <br>
              <button type="submit" class="btn">Off to Space</button> 
              <br>
              <a href="/" class="btn">Home</a>
            </form>
        </div>
      </section>
  </body>
</html>

