    <link href="../stylesheets/passengerInfo.style.css" rel="stylesheet" />
  </head>
  <body class="background-image">

    <section>
      <h3>Number of Passengers</h3>
      <div class="passengerSelector">
        <button id="minus" class="minus">-</button>
        <span id="passengerNum">1</span>
        <button id="plus" class="plus">+</button>
      </div>
    </section>

    <div class="main-container">

      <div class="form-container">
        <div id="form1" class="form1">
          <form id="formA" action="/auth/passenger-info" method="post">
            <div class="form-row">
              <div class="col-12">
                <label for="firstName">First Name</label>
                <input
                  type="text"
                  name="firstName"
                  class="form-control"
                  id="firstName"
                  placeholder="John"
                />
              </div>
              <div class="col-12">
                <label for="lastName">Last Name</label>
                <input
                  type="text"
                  name="lastName"
                  class="form-control"
                  id="lastName"
                  placeholder="Smith"
                />
              </div>
              <div class="col-12">
                <label for="birthDate">Birthdate</label>
                <input
                  type="date"
                  class="form-control"
                  id="birthDate"
                  name="birthDate"
                />
              </div>
              <div class="col-12">
                <label for="address">Address</label>
                <input
                  type="text"
                  name="address"
                  class="form-control"
                  id="address"
                  placeholder="1234 Main St"
                />
              </div>
              <div class="col-12">
                <label for="departure">Departure</label>
                <input
                  type="text"
                  name="departure"
                  class="form-control"
                  id="departure"
                  placeholder="Departure location"
                />
              </div>
              <div class="col-12">
                <label for="departure">Destination</label>
                <input
                  type="text"
                  name="destination"
                  class="form-control"
                  id="destination"
                  placeholder="Destination"
                />
              </div>
              <div class="col-6">
                <label for="departureDate">Departure Date</label>
                <input
                  type="date"
                  class="form-control"
                  name="departureDate"
                  id="departureDate"
                />
              </div>
              <div class="col-6">
                <label for="returnDate">Return Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="returnDate"
                  name="returnDate"
                />
              </div>
              <div class="col-12">
                <label for="passport">Passport No.</label>
                <input
                  type="text"
                  name="passportNumber"
                  class="form-control"
                  id="passport"
                  placeholder="Passport No."
                />
              </div>
            </div>
          </form>
        </div>

        <div id="form2" class="form2">
          <form id="formB" action="/auth/passenger-info" method="post">
            <div class="form-row">
              <div class="col-12">
                <label for="firstName">First Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="firstName"
                  placeholder="John"
                />
              </div>
              <div class="col-12">
                <label for="lastName">Last Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="lastName"
                  placeholder="Smith"
                />
              </div>
              <div class="col-12">
                <label for="birthdate">Birthdate</label>
                <input type="date" class="form-control" id="birthDate" />
              </div>
              <div class="col-12">
                <label for="Address">Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  placeholder="1234 Main St"
                />
              </div>
              <div class="col-12">
                <label for="departure">Departure</label>
                <input
                  type="text"
                  class="form-control"
                  id="departure"
                  placeholder="Departure location"
                />
              </div>
              <div class="col-12">
                <label for="departure">Destination</label>
                <input
                  type="text"
                  class="form-control"
                  id="destination"
                  placeholder="Destination"
                />
              </div>
              <div class="col-6">
                <label for="departureDate">Departure Date</label>
                <input type="date" class="form-control" id="departureDate" />
              </div>
              <div class="col-6">
                <label for="returnDate">Return Date</label>
                <input type="date" class="form-control" id="returnDate" />
              </div>
              <div class="col-12">
                <label for="passport">Passport No.</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Passport No."
                  required
                />
              </div>
            </div>
            <div class="buttons">
              <a href="/auth/booking" id="backBtn"> Back </a>
              <button
                type="submit"
                class="btn btn-primary"
                id="submitForm"
              >Confirm Booking</button>
              <a href="" id="cancelBooking">Cancel</a>
            </div>
          </form>
        </div>

      </div>

    </div>

