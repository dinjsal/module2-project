<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User LogIn Page</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400"
      rel="stylesheet"
    />
    <link href="../stylesheets/login.style.css" rel="stylesheet"/>
   
  </head>
  <body>
      <section class="showcase">
        <div class="video-container">
          <video autoplay muted loop plays-inline>
            <source src="/images/spaceshipWindow.mp4" type="video/mp4">
          </video>
        </div>
        <div class="content">
          <h1>Log In to Your Account</h1>
            {{#if errorMessage}}
              <div class="error">{{errorMessage}}</div>
              <br />
            {{/if}}
            <form action="/auth/login" method="POST">
              <label for="email">EMAIL</label>
              <input class="form-selection form-selection1" autofocus type="email" name="email" required />
              <br>
              <label for="password">PASSWORD</label>
              <input class="form-selection" type="password" name="password" required />
              <br>
              <br>
              <br>
              <button type="submit" class="btn">Log In</button> 
              <br>
              <a href="/" class="btn">Home</a>
            </form>
        </div>
      </section>
  </body>
</html>

