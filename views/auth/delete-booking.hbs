<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Passenger Info</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400"
      rel="stylesheet"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link href="../stylesheets/passenger-info.style.css" rel="stylesheet" />
  </head>
  <body class="background-image">
    
    <section>
      <h3>Delete Booking Page</h3>
    </section>

    <div class="main-container">

      <div class="form-container">
        <div id="form1" class="form1">
          <form id="formA" action="/auth/passenger-info/delete" method="post">
            <div class="form-row">
              <div class="col-12">
                <label for="firstName">First Name</label>
                <input
                  type="text"
                  name="firstName"
                  class="form-control grey-form first-name"
                  id="firstName"
                  placeholder="John"
                />
              </div>
              <div class="col-12">
                <label for="lastName">Last Name</label>
                <input
                  type="text"
                  name="lastName"
                  class="form-control grey-form last-name"
                  id="lastName"
                  placeholder="Smith"
                />
              </div>
              <div class="col-12">
                <label for="birthDate">Birthdate</label>
                <input
                  type="date"
                  class="form-control grey-form birth-date"
                  id="birthDate"
                  name="birthDate" 
                />
              </div>
              <div class="col-12">
                <label for="address">Address</label>
                <input
                  type="text"
                  name="address"
                  class="form-control grey-form address"
                  id="address"
                  placeholder="1234 Main St" 
                />
              </div>
              <div class="col-12">
                <label for="departure">Departure</label>
                <input
                  type="text"
                  name="departure"
                  class="form-control grey-form departure"
                  id="departure"
                  placeholder="Departure location" 
                />
              </div>
              <div class="col-12">
                <label for="destination">Destination</label>
                <input
                  type="text"
                  name="destination"
                  class="form-control grey-form destination"
                  id="destination"
                  placeholder="Destination" 
                />
              </div>
              <div class="col-6">
                <label for="departureDate">Departure Date</label>
                <input
                  type="date"
                  class="form-control grey-form departure-date"
                  name="departureDate"
                  id="departureDate" 
                />
              </div>
              <div class="col-6">
                <label for="returnDate">Return Date</label>
                <input
                  type="date"
                  class="form-control grey-form return-date"
                  id="returnDate"
                  name="returnDate" 
                />
              </div>
              <div class="col-12">
                <label for="passport">Passport No.</label>
                <input
                  type="text"
                  name="passportNumber"
                  class="form-control grey-form passport"
                  id="passport"
                  placeholder="Passport No." 
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
          <div class="buttons main-buttons">
              <a href="/auth/booking" id="backBtn"> Back to Booking </a>
              <button
                type="submit"
                class="btn btn-primary capture-info"
                id="submitForm"
              >Complete Booking</button>
              <a href="/profile" id="cancelBooking">Back to Profile</a>
            </div>


<div class="capture-container" style="display: none">

      <div class="form-container">
        <div id="form1" class="form1">
          <form id="formA" action="/auth/passenger-info" method="post">
            <div class="form-row">
              <div class="col-12">
                <label for="firstName">First Name</label>
                <p class="form-control color-capture first-name-output">
                  {{loggedInUser.firstName}}
                </p>
              </div>
              <div class="col-12">
                <label for="lastName">Last Name</label>
                <p class="form-control color-capture last-name-output">
                <p class="form-control2 color-capture bitcoin-output"></p>
                  {{loggedInUser.lastName}}
                </p>
              </div>
              <div class="col-12">
                <label for="birthDate">Birthdate</label>
                 <p class="form-control color-capture birth-date-output"></p>
              </div>
              <div class="col-12">
                <label for="address">Address</label>
                <p class="form-control color-capture address-output"></p>
              </div>
              <div class="col-12">
                <label for="departure">Departure</label>
                <p class="form-control color-capture departure-output"></p>
              </div>
              <div class="col-12">
                <label for="destination">Destination</label>
                <p class="form-control color-capture destination-output"></p>
              </div>
              <div class="col-6">
                <label for="departureDate">Departure Date</label>
                <p class="form-control color-capture departure-date-output"></p>
              </div>
              <div class="col-6">
                <label for="returnDate">Return Date</label>
               <p class="form-control color-capture return-date-output"></p>
              </div>
              <div class="col-12">
                <label for="passport">Passport No.</label>
                <p class="form-control color-capture passport-output"></p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
            <div style="display: none" id="capture">
            <div class="buttons">
              <a href="/auth/passenger-info" id="backBtn">Edit Passenger Info</a>
              <a href="/profile" id="cancelBooking">Back to Profile</a>
            </div>
            </div>

    {{!-- <script src="/js/delete-booking.js"></script> --}}
  </body>
</html>